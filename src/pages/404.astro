---
import { Image } from 'astro:assets';
import goldenGatePark from '../assets/golden-gate-park.webp';
import { Footer } from '../components/Footer';
import { Header } from '../components/Header';
import Page from '../components/Page.astro';
---

<Page title="bay.works" description="we are a computer science club based in Cupertino.">
    <Header client:load />
    <div class="flex flex-col w-full h-screen relative overflow-hidden isolate px-4 md:px-8">
        <Image 
          src={goldenGatePark}
          alt="Golden Gate Park in San Francisco, California"
          class="absolute top-0 left-0 w-full h-full object-cover object-center -z-20"
        />
        <div class="w-full h-full absolute top-0 left-0 bg-surface/80 -z-10" />
        <div class="z-10 relative flex flex-col gap-4 justify-center items-center h-full text-center pt-32 pb-32 sm:pt-42">
            <h1 class="text-7xl md:text-9xl lg:text-[9rem] font-bold relative max-w-6xl w-full h-full">
                <span class="absolute top-0 left-0">not</span>
                <span class="absolute bottom-0 right-0">found</span>
            </h1>
        </div>
    </div>
    <Footer />
</Page>
